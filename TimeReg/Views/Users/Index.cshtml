@model List<TimeReg.VI_Users>


    @{
    ViewBag.Title = "Index";
    }

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Zid
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NK_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NK_ZId)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PK_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PK_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PK_Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script type="text/javascript" src="/path/to/jquery.tablesorter.js">
    $(function() {
  $(".table").tablesorter();
    });
</script>
}
