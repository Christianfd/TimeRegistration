    <div class="form-horizontal">
        <h4>UserAssignment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (ViewBag.Exception != null)
        {
            <p class="text-danger">@ViewBag.EasyMessage</p>
        }

