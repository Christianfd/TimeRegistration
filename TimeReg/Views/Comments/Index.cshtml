<div id="AjaxJSLoader"></div>

<input type="hidden" id="currentControllerPath" value="@Url.Content("~/"+ViewBag.CurrentController)" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        function inputCleanUp() {

            var form = $("#PartialViewModalBody").children('form');
         form.find(':input').each(function () {

             switch (this.type) {
                 case 'select-multiple':
                 case 'text':
                 case 'textarea':
                     $(this).val('');
                     break;
                 case 'checkbox':
                 case 'radio':
                     this.checked = false;
             }
             form.find(".selectpicker").each(function () {
                 console.log($(this).val());
                 $(this).val('');
                 $(".selectpicker").trigger("chosen:updated");
             });
             
         });
         console.log("inputCleanUp triggered");
        }
    
    
</script>


    <script src="~/Scripts/tools/dynamicCrudPages.js"></script>
}
