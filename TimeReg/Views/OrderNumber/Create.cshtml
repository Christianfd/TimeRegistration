@model TimeReg.ViewModels.OrderNumberViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Order Number</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Requesting Organization*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_RequestOrg, "Requesting Organization", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_RequestOrg", (SelectList)ViewBag.FK_RequestOrg, htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.FK_RequestOrg, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Requester*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_Requester, "Requester", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_Requester", (SelectList)ViewBag.FK_Requester, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_Requester, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Customer Reference*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_CustomerRef, "Customer Reference", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_CustomerRef", (SelectList)ViewBag.FK_CustomerRef, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_CustomerRef, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
