@model TimeReg.ViewModels.ProjectsViewModel

@{
    ViewBag.Title = "Projects - Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Projects</h4>
        <hr />
        @*Project Name*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Project Name", htmlAttributes: new { @class = "col-form-label col-md-2"})
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Name, htmlAttributes: new { @class = "form-control", @id = "ProjectName", @readonly = true , @rows = 2} )
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Product Or Platform*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_PlatformOrProduct, "Platform or Product", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_PlatformOrProduct", (SelectList)ViewBag.FK_PlatformOrProduct, " -", htmlAttributes: new { @class = "form-control selectpicker", @id = "PlatformOrProduct" })
                @Html.ValidationMessageFor(model => model.FK_PlatformOrProduct, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Site or Version*@
        <div class="form-group">
            @Html.LabelFor(model => model.SiteOrVersion, "Site Or Version", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.SiteOrVersion, new { htmlAttributes = new { @class = "form-control", @id = "SiteOrVersion" } })
                @Html.ValidationMessageFor(model => model.SiteOrVersion, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Turbine*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_Turbine, "Turbine", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_Turbine", (SelectList)ViewBag.FK_Turbine,"-", htmlAttributes: new { @class = "form-control selectpicker", id = "Turbine selectpicker" })
                @Html.ValidationMessageFor(model => model.FK_Turbine, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Project Scope*@
        <div class="form-group">
            @Html.LabelFor(model => model.Scope, "Project Scope", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Scope, htmlAttributes: new { @class = "form-control", id = "Scope", @rows = 2 })
                @Html.ValidationMessageFor(model => model.Scope, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Country*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_Country, "Country", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_Country", (SelectList)ViewBag.FK_Country, "-", htmlAttributes: new { @class = "form-control selectpicker" })
                @Html.ValidationMessageFor(model => model.FK_Country, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Project Comment*@
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectComment, "Project Comment", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ProjectComment, htmlAttributes: new { @class = "form-control", @rows = 5, @text = "No Comment" })
                @Html.ValidationMessageFor(model => model.ProjectComment, "", new { @class = "text-danger" })
            </div>
        </div>


        @*Order Number*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_OrderNumber, "Order Number", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_OrderNumber", (SelectList)ViewBag.FK_OrderNumber, "Please Select Order Number", htmlAttributes: new { @class = "form-control selectpicker" })
                @Html.ValidationMessageFor(model => model.FK_ProjectLeader, "", new { @class = "text-danger" })
            </div>
        </div>


      

        @*Time Estimation*@
        <div class="form-group">
            @Html.LabelFor(model => model.TimeEstimation, "Time Estimation", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TimeEstimation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TimeEstimation, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Project Leader*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_ProjectLeader, "Project Leader", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_ProjectLeader", (SelectList)ViewBag.FK_ProjectLeader, "Please Select One" , htmlAttributes: new { @class = "form-control selectpicker" })
                @Html.ValidationMessageFor(model => model.FK_ProjectLeader, "", new { @class = "text-danger" })
            </div>
        </div>
        
        @*Time Type*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_TimeType, "Time Type", htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_TimeType", (SelectList)ViewBag.FK_TimeType, "Please Select Type", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ProjectLeader, "", new { @class = "text-danger" })
            </div>
        </div>


        @*Buttone*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
      
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")


            @*Auto Completion Script -- Use Class "selectpicker" on dropdowns*@
            <script src="~/Scripts/tools/searchableDropDown.js"
                    type="text/javascript"></script>
          
            <script>
                //Check for a change in the first four rows, which are to determine 
                $("#PlatformOrProduct, #SiteOrVersion, #Turbine, #Scope ").change(function () {
                    var ProjectNameValue = "";
                    if ($("#PlatformOrProduct option:selected").text() != "Not Assigned") {
                        ProjectNameValue += $("#PlatformOrProduct option:selected").text().replace(/\n/g, "");
                    } else {
                        ProjectNameValue += " -";
                    };

                    ProjectNameValue += " ";
               
                    ProjectNameValue += $("#SiteOrVersion").val();
                 
                    ProjectNameValue += " ";

                    if ($("#Turbine option:selected").text() != "Not Assigned") {
                        ProjectNameValue += $("#Turbine option:selected").text();
                    } else {
                        ProjectNameValue += " - ";
                    };

                    ProjectNameValue += "\n";
                    ProjectNameValue += "- ";

                    ProjectNameValue += $("#Scope").val();

                    $('#ProjectName').val(ProjectNameValue);


                    });
            </script>
        }
