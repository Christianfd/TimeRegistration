@model TimeReg.ViewModels.ProjectsViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Projects</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PK_Id)

        @*Project Name*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Project Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Name, htmlAttributes: new { @class = "form-control", @id = "ProjectName", @readonly = true, @rows = 2 })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
   

      @*Product Or Platform*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_PlatformOrProduct, "Platform or Product", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_PlatformOrProduct", null, htmlAttributes: new { @class = "form-control", @id = "PlatformOrProduct" })
                @Html.ValidationMessageFor(model => model.FK_PlatformOrProduct, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Site or Version*@
        <div class="form-group">
            @Html.LabelFor(model => model.SiteOrVersion, "Site Or Version", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.SiteOrVersion, new { htmlAttributes = new { @class = "form-control", @id = "SiteOrVersion" } })
                @Html.ValidationMessageFor(model => model.SiteOrVersion, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Turbine*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_Turbine, "Turbine", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_Turbine", null, htmlAttributes: new { @class = "form-control", id = "Turbine" })
                @Html.ValidationMessageFor(model => model.FK_Turbine, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Project Scope*@
        <div class="form-group">
            @Html.LabelFor(model => model.Scope, "Project Scope", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Scope, htmlAttributes: new { @class = "form-control", id = "Scope", @rows = 2 })
                @Html.ValidationMessageFor(model => model.Scope, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Country*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_Country, "Country", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_Country", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_Country, "", new { @class = "text-danger" })
            </div>
        </div>


        @*Order Number*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_OrderNumber, "Order Number", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_OrderNumber", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ProjectLeader, "", new { @class = "text-danger" })
            </div>
        </div>


        @*Time Estimation*@
        <div class="form-group">
            @Html.LabelFor(model => model.TimeEstimation, "Time Estimation", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.TimeEstimation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TimeEstimation, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Project Leader*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_ProjectLeader, "Project Leader", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_ProjectLeader", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ProjectLeader, "", new { @class = "text-danger" })
            </div>
        </div>
        
        @*Time Type*@
        <div class="form-group">
            @Html.LabelFor(model => model.FK_TimeType, "Time Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_TimeType", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_ProjectLeader, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Project Comment*@
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectComment, "Project Comment", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ProjectComment, htmlAttributes: new { @class = "form-control", style = "height:150px" })
                @Html.ValidationMessageFor(model => model.ProjectComment, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Button*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jquery")

<script>
                //Check for a change in the first four rows, which are to determine
                $("#PlatformOrProduct, #SiteOrVersion, #Turbine, #Scope ").change(function () {
                    var ProjectNameValue = "";
                    if ($("#PlatformOrProduct option:selected").text() != "Not Assigned") {
                        ProjectNameValue += $("#PlatformOrProduct option:selected").text().replace(/\n/g, "");
                    } else {
                        ProjectNameValue += " -";
                    };

                    ProjectNameValue += " ";

                    ProjectNameValue += $("#SiteOrVersion").val();

                    ProjectNameValue += " ";

                    if ($("#Turbine option:selected").text() != "Not Assigned") {
                        ProjectNameValue += $("#Turbine option:selected").text();
                    } else {
                        ProjectNameValue += " - ";
                    };

                    ProjectNameValue += "\n";
                    ProjectNameValue += "- ";

                    ProjectNameValue += $("#Scope").val();

                    $('#ProjectName').val(ProjectNameValue);


                    });
</script>
}
